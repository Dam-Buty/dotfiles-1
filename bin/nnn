#!/bin/bash
bitcoin=(
  "1F1tAaz5x1HUXrCNLbtMDqcw6o5GNn4xqX"
  "3DB5T1FbE86UHWvCQjZmHR7zFw7mBMFtVL"
  "1JUToCyRL5UwgeucjnFAagKs4v1YqhjT1d"
)
bitcoin_testnet=(
  "n4VQ5YdHf7hLQ2gWQYYrcxoE5B7nWuDFNF"
  "2N2K39Qp2BqezHBqzvCRNoQzMGK3XMnYrXU"
  "tb1qvtykjg2warrgh2ala5qxvpenkt4k6kkssjgpdg"
)
ethereum=(
  "0xe5e428cbb93a218dad2c908f2f3e2f46575d91a5"
  "0x4F10eb44cC069e8052832a7A841b0e3B758Ff8cF"
  "0x5ed8cee6b63b1c6afce3ad7c92f4fd7e1b8fad9f"
  "0x1f6f76467c4379121ca73d1abada452e7b94aa71"
)
ropsten=(
  "0xD7a15BAEB7EA05C9660CBe03fB7999c2C2e57625"
  "0xD7a15BAEB7EA05C9660CBe03fB7999c2C2e57625"
  "0x687422eEA2cB73B5d3e242bA5456b782919AFc85"
)
xrp=(
  "r3kmLJN5D28dHuH8vZNUZpMC43pEHpaocV"
  "rupiah7aqR5k1xBaTRRFu3VrwcDftD6VV"
  "rEWoXTmxwqqnPdYqtVEuoRgJXARXxf21Sn"
)
dash=(
  "XgsN1zxCYDp8gCma3gkteGHGfECF4iNy7n"
  "XyjGLkVq2dn18joe532KacsUDZ9JHPVT5g"
  "XvQD9xGRLwX8PMCr34pHuqX1zMw2xQGb54"
)
# Requires bash 4, though
IFS=$'\n'
declare -A addresses=()
addresses["bitcoin"]=$(echo "${bitcoin[*]}")
addresses["ethereum"]=$(echo "${ethereum[*]}")
addresses["bitcoin_testnet"]=$(echo "${bitcoin_testnet[*]}")
addresses["ropsten"]=$(echo "${ropsten[*]}")
addresses["dash"]=$(echo "${dash[*]}")
addresses["xrp"]=$(echo "${xrp[*]}")
dmenu_currencies=""
for KEY in "${!addresses[@]}"; do
  dmenu_currencies="${dmenu_currencies}$KEY\n"
done
currency=$(printf "$dmenu_currencies" | dmenu -l 10)
[ -z "$currency" ] && exit 1
list=${addresses[$currency]}
echo "$list"
address=$(echo "${list[*]}" | dmenu -l 10)
[ -z "$address" ] && exit 1
echo $address | xclip -selection clipboard
