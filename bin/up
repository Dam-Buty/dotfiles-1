#!/bin/bash

filePath=$1

if [ "$filePath" == "" ]; then
  echo "usage: up <file>"
  exit 1
fi

baseName=`basename $filePath`
destination="/www/media/up"
finalURL="http://media.sigsev.io/up/$baseName"

printf "> Uploading %s\n" $filePath

scp $filePath meri@$ZAVATTA:$destination
[ $? -ne 0 ] && exit 1

printf "> %s\n" $finalURL
