#!/bin/bash

CASE_SENSITIVE="true"
plugins=()

export ZSH=$HOME/.oh-my-zsh
export LANG=en_US.UTF-8
export EDITOR="$(which vim)"
export LS_COLORS="ln=32:di=35;35:ex=40;31;01"
export GPG_TTY=$(tty)

source $ZSH/oh-my-zsh.sh
source $HOME/git/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

source $HOME/.private
source $HOME/.profile
source $HOME/.gitprompt
source $HOME/.prompt
source $HOME/.path

# fzf

export FZF_DEFAULT_COMMAND='rg --files --follow'
export FZF_CTRL_T_COMMAND='rg --files --follow 2>/dev/null'

fzfKeyBindings=/etc/profile.d/fzf.zsh
if [ -f $fzfKeyBindings ]; then
  source $fzfKeyBindings
fi

# dev

export GOPATH=$HOME/dev/go
export BOLOS_ENV=$HOME/bolos
export BOLOS_SDK=$HOME/git/nanos-secure-sdk

if [[ `uname` == 'Linux' ]]; then

  export ANDROID_HOME=/opt/android-sdk
  export BROWSER=/usr/sbin/google-chrome-unstable
  export TERMINAL=$TERM

  if [[ $TERM == xterm-termite ]]; then
    . /etc/profile.d/vte.sh 2>/dev/null
    __vte_osc7 2>/dev/null
  fi

fi

if [ -z "$SSH_AUTH_SOCK" ] ; then
  echo "> Starting ssh-agent"
  eval `ssh-agent -s`
fi

if [ -n "$DISPLAY" ] && ! ssh-add -l >/dev/null; then
  ssh-add
fi
